systemLog:
  destination: file
  logAppend: true
  path: {{ mongo_log_path }}/mongod.log

storage:
  dbPath: {{ mongo_db_path }}

processManagement:
  fork: true
  pidFilePath: /var/run/mongod.pid

net:
  port: {{ mongo_port }}
  bindIp: {{ ansible_fqdn }},{{ ansible_default_ipv4['address'] }}

replication:
  replSetName: "{{ mongo_replset }}"
